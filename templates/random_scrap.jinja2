<!doctype html>
<head>
    <title>Random Scrap</title>
    <style type="text/css">
        html {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
            "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans",
            "Helvetica Neue", sans-serif;
        background: #eee;
        -webkit-text-size-adjust: 100%;
    }
    body {
        margin: 0;
        padding: 1em 1em 4em 1em;
        color: #666;
        text-rendering: optimizeLegibility;
        line-height: 1.35;
        font-weight: 700;
    }
    section {
        max-width: 30em;
        margin: 0 auto;
        padding: 0 1em;
        position: relative;
    }
    p,
    ul,
    hr {
        margin: 0.675em auto;
    }
    hr {
        border: none;
        border-top: solid 1px #ddd;
    }
    .bucket {
        text-transform: uppercase;
        font-size: 0.75rem;
        margin-bottom: 0;
        font-weight: 800;
        letter-spacing: 1px;
    }
    .bucket--snippet {
        color: #ffbb00;
    }
    .bucket--quote {
        color: #1cde7e;
    }
    .bucket--poem {
        color: #00cbdb;
    }
    .date {
        margin-top: 0;
        color: #999;
    }
    .content {
        font-size: 1.5rem;
        background: white;
        border-radius: 5px;
        padding: 1px 1em;
        margin: 0 -1em;
    }
    .content--quote {
        font-style: italic;
    }
    .content--poem {
        font-size: 1.25rem;
    }
    .meta-items {
        padding: 0;
    }
    .meta-item {
        list-style-type: none;
        position: relative;
        margin: 0;
        padding: 0 0 0 0.9em;
    }
    .meta-item::before {
        content: "â€“";
        position: absolute;
        left: 0;
    }
    .meta-item--tag {
        color: #999;
    }
    .meta-item--tag:before {
        content: "";
    }
    a {
        color: inherit;
        text-decoration: underline;
    }
    .refresh {
        background: #999;
        display: inline-block;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        text-align: center;
        position: absolute;
        top: 0;
        right: 0;
    }
    .refresh img {
        width: 2rem;
        opacity: 0.835;
        margin-top: 0.25rem;
    }
    </style>
</head>
<body>
    <article>
        <section>
            <p class="bucket bucket--{{ bucket }}">
                {{ bucket }}
            </p>
            <p class="date">
                {{ created_at.humanize(locale="de") }}
                <br>
                {{ created_at.format("dddd, D. MMMM YYYY", locale="de") }}
                <br>
                {{ created_at.format("H:mm", locale="de") }} Uhr
            </p>
            <div class="content content--{{ bucket }}">
                {{ text }}
            </div>
            {% if metadata %}
                <ul class="meta-items">
                {% for item in metadata %}
                    <li class="meta-item{% if item.kind %} meta-item--{{ item.kind }}{% endif %}">
                        {% if item.url %}
                            <a href="{{ item.url }}">
                                {% if item.url_name %}
                                    {{ item.url_name }}
                                {% else %}
                                    {{ item.content }}
                                {% endif %}
                            </a>
                        {% else %}
                            {% if item.kind == "tag" %}#{% endif %}{{ item.content }}
                        {% endif %}
                    </li>
                {% endfor %}
                </ul>
            {% endif %}
            <a href="/random" class="refresh"><img src="data:image/svg+xml;utf-8;base64,"></a>
        </section>
    </article>
    <script>
        {# window.setTimeout(function () {
            location.reload();
        }, 3000) #}
    </script>
</body>
